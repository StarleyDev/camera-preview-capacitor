{
  "name": "@starley/camera-preview-capacitor",
  "version": "6.0.0-beta.2",
  "description": "Camera preview capacitor",
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf './dist'",
    "watch": "tsc --watch",
    "lint": "concurrently -g \"npm:eslint\" \"npm:prettier -- --check\" \"npm run swiftlint -- lint ios\"",
    "fmt": "concurrently -g \"npm:eslint -- --fix\" \"npm:prettier -- --write\" \"npm:swiftlint -- lint --fix --format ios\"",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "prepublishOnly": "npm run build",
    "prepare": "husky install && npm run build"
  },
  "author": "Starley Cazorla",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^6.1.0",
    "@capacitor/core": "^6.1.0",
    "@capacitor/ios": "^6.1.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "concurrently": "^7.0.0",
    "eslint": "^9.4.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "prettier-plugin-java": "^2.6.0",
    "pretty-quick": "^4.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "swiftlint": "^1.0.1",
    "typescript": "^4.3.2"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "StarleyCameraPreviewCapacitor.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/StarleyDev/camera-preview-capacitor.git"
  },
  "bugs": {
    "url": "https://github.com/StarleyDev/camera-preview-capacitor/issues"
  }
}
